@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                <a asp-action="ManageUserRoles" asp-route-userId="@user.Id">Manage Roles</a> |
                <a asp-action="ManageUserClaims" asp-route-userId="@user.Id">Manage Claims</a> |
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                    <button type="submit" class="btn btn-link">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>