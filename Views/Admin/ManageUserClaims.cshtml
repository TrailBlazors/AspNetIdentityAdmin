@model AspNetIdentityAdmin.Controllers.ManageUserClaimsViewModel

@{
    ViewData["Title"] = "Manage User Claims";
}

<h1>Manage Claims for @Model.UserName</h1>

<form asp-action="ManageUserClaims" method="post">
    <input type="hidden" asp-for="UserId" />

    <table class="table">
        <thead>
            <tr>
                <th>Type</th>
                <th>Value</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <tr>
                    <td>
                        <input asp-for="Claims[@i].Type" class="form-control" readonly />
                    </td>
                    <td>
                        <input asp-for="Claims[@i].Value" class="form-control" readonly />
                    </td>
                    <td>
                        <input asp-for="Claims[@i].Selected" type="checkbox" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
</form>
