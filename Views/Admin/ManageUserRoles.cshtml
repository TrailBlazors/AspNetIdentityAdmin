@model AspNetIdentityAdmin.Controllers.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage Roles for " + Model.UserName;
}

<h1>Manage Roles for @Model.UserName</h1>

<form asp-action="ManageUserRoles" method="post">
    <input type="hidden" asp-for="UserId" />
    <table class="table">
        <thead>
            <tr>
                <th>Role</th>
                <th>Assigned</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Roles.Count; i++)
            {
                <tr>
                    <td>
                        @Model.Roles[i].RoleName
                        <input type="hidden" asp-for="Roles[@i].RoleId" />
                        <input type="hidden" asp-for="Roles[@i].RoleName" />
                    </td>
                    <td>
                        <input asp-for="Roles[@i].Selected" type="checkbox" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary btn-bold-white">Save Changes</button>
    <a asp-action="Users" class="btn btn-secondary btn-bold-white">Cancel</a>
</form>
