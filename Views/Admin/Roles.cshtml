@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Manage Roles";
}

<h1>Manage Roles</h1>

<p>
    <a asp-action="CreateRole" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-secondary btn-sm">Edit</a>
                <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this role?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>